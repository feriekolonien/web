---
links:
    - text: Om oss
      url: /om-oss/
    - text: Bilder
      url: /bilder/
    - text: Historien
      url: /historien/
    - text: Kontakt
      url: /kontakt/
    - text: St√∏tte
      url: /grasrot/
---

<nav class="mx-center mx-auto flex max-w-6xl flex-col py-5 sm:flex-row md:items-center">
    <div class="mr-auto flex w-full sm:w-auto">
        <a class="mr-auto" href="/">
            {{ comp.image({
                width: 160,
                height: 40,
                src: "/assets/logo.png",
                altText: "Filtvet feriekoloni"
            }) }}
        </a>
    </div>
    <ul class="mx-3 mt-4 space-x-6 text-slate-900 sm:mt-0 flex">
        {{ for link of links }}
            {{set isActive = url && url.startsWith(link.url) }}
            <li>
                <a
                    class="
                        font-bold
                        relative
                        pb-1
                        transition-colors
                        duration-200
                        ease-in-out
                        hover:text-slate-600
                        {{ if isActive }}
                            text-primary-2
                            after:w-full
                        {{ else }}
                            text-slate-900
                            hover:after:w-full
                        {{ /if }}
                        after:content-['']
                        after:absolute
                        after:bottom-0
                        after:left-0
                        after:h-0.5
                        {{ if isActive }}after:w-full after:bg-slate-900{{ else }}after:bg-slate-600 after:w-0{{ /if }}
                        after:transition-all
                        after:duration-300
                        after:ease-out
                    "
                    href="{{ link.url }}"
                    {{ if isActive }}aria-current="page"{{ /if }}
                >
                    {{ link.text }}
                </a>
            </li>
        {{ /for }}
    </ul>
</nav>
